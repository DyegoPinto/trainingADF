{
	"name": "pip_load_file_client",
	"properties": {
		"activities": [
			{
				"name": "cd_file_client",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "ds_csv_semicolon",
						"type": "DatasetReference",
						"parameters": {
							"container": {
								"value": "@pipeline().parameters.container",
								"type": "Expression"
							},
							"folder": {
								"value": "@pipeline().parameters.SourceFolder",
								"type": "Expression"
							},
							"fileName": {
								"value": "@pipeline().parameters.SourceFileName",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "ds_csv_semicolon",
						"type": "DatasetReference",
						"parameters": {
							"container": {
								"value": "@pipeline().parameters.container",
								"type": "Expression"
							},
							"folder": {
								"value": "@pipeline().parameters.DestinationFolder",
								"type": "Expression"
							},
							"fileName": {
								"value": "@concat('teste','_',formatDateTime(pipeline().TriggerTime, 'dd-MM-yyyy HH:mm:ss'),'.csv')",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"parameters": {
			"container": {
				"type": "String",
				"defaultValue": "ctadftrainingazure"
			},
			"SourceFolder": {
				"type": "String",
				"defaultValue": "dpt_sport"
			},
			"SourceFileName": {
				"type": "String",
				"defaultValue": "00_cliente_20240428232415.csv"
			},
			"DestinationFolder": {
				"type": "String",
				"defaultValue": "analytics/landing_zone"
			}
		},
		"variables": {
			"container": {
				"type": "String"
			}
		},
		"annotations": [],
		"lastPublishTime": "2024-05-11T14:01:51Z"
	},
	"type": "Microsoft.DataFactory/factories/pipelines"
}